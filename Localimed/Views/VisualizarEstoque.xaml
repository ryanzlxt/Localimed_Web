<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Localimed.Views.VisualizarEstoque"  
             Title="Estoque de Medicamentos"
             Shell.NavBarIsVisible="False">
    
    
    <VerticalStackLayout Padding="10" BackgroundColor="White">
        <Label Text="Estoque de Medicamentos"
               FontAttributes="Bold"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="Black"
               Margin="0,10" />
        

        <BoxView Color="Gray" HeightRequest="200" HorizontalOptions="Fill" />

        <HorizontalStackLayout HorizontalOptions="Center" Margin="0,20">
            <Button Text="Remover Medicamentos" BackgroundColor="Gray"
                    TextColor="White" 
                    Margin="0,0,10,0"
                    Command="{Binding BotaoRemoverMedicamentos}"/>
            <Button Text="Adicionar Medicamentos" 
                    BackgroundColor="#041A3F" 
                    TextColor="White"
                    Command="{Binding BotaoInserirMedicamentos}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage> 