<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Localimed.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Localimed.Views"
    Title="Localimed">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LogPage}"
        Route="LogPage" /> <!-- Página de login-->
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomePage" />
    <!-- Página inicial do aplicativo -->


    <!-- Conexão com a tela de inserir medicamentos-->
    <ShellContent
    Title="Inserir Medicamentos"
    ContentTemplate="{DataTemplate views:InserirMedicamentos}"
    Route="InserirMedicamentos" />

    <!-- Conexão com a tela de remover medicamentos-->
    <ShellContent 
    Title="Remover Medicamentos"
    ContentTemplate="{DataTemplate views:RemoverMedicamentos}"
    Route="RemoverMedicamentos"/>

    <!-- Conexão com a tela de visualizar estoque-->
    <ShellContent 
    Title="Visualizar Estoque"
    ContentTemplate="{DataTemplate views:VisualizarEstoque}"
    Route="VisualizarEstoque"/>

</Shell>
